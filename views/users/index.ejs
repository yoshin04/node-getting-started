<h2>Users Table</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td>
          <a href="<%= `/users/${user._id}` %> ">
            <%= user.fullName %>
          </a>
        </td>
        <td><%= user.email %></td>
        <td>
          <a href="<%= `/users/${user._id}/edit` %>">
            Edit
          </a>
        </td>
        <td>
          <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm(`Are you sure want to delete this record?`)">
            DELETE
          </a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>